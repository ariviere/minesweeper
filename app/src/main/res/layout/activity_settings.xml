<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/default_margin">

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RadioButton
            android:id="@+id/beginner_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:text="@string/beginner"
            android:textSize="15sp"/>

        <RadioButton
            android:id="@+id/intermediate_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:text="@string/intermediate"
            android:textSize="15sp"/>

        <RadioButton
            android:id="@+id/expert_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:text="@string/expert"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/error_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/red"
            android:visibility="invisible"
            />

        <RadioButton
            android:id="@+id/custom_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:text="@string/custom"
            android:textSize="15sp"/>

    </RadioGroup>

    <RelativeLayout
        android:id="@+id/custom_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="86dp"
        android:paddingLeft="26dp"
        android:visibility="invisible">


        <EditText
            android:id="@+id/rows_input"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="6dp"
            android:hint="9"
            android:inputType="number"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/rows_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/rows_input"
            android:text="@string/rows"
            android:gravity="center_vertical|left"
            android:layout_marginTop="4dp"
            android:textSize="15sp"
            android:layout_alignTop="@+id/rows_input"
            android:layout_alignBottom="@+id/rows_input" />

        <EditText
            android:id="@+id/columns_input"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="6dp"
            android:hint="12"
            android:inputType="number"
            android:textSize="15sp"
            android:layout_below="@id/rows_input"
            />

        <TextView
            android:id="@+id/columns_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/columns_input"
            android:text="@string/columns"
            android:gravity="center_vertical|left"
            android:layout_marginTop="4dp"
            android:textSize="15sp"
            android:layout_alignTop="@+id/columns_input"
            android:layout_alignBottom="@+id/columns_input" />

        <EditText
            android:id="@+id/mines_input"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="6dp"
            android:hint="24"
            android:inputType="number"
            android:textSize="15sp"
            android:layout_below="@id/columns_input"
            />

        <TextView
            android:id="@+id/mines_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/mines_input"
            android:text="@string/mines"
            android:gravity="center_vertical|left"
            android:layout_marginTop="4dp"
            android:textSize="15sp"
            android:layout_alignTop="@+id/mines_input"
            android:layout_alignBottom="@+id/mines_input" />

    </RelativeLayout>
</LinearLayout>